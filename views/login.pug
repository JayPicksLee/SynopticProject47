extends layout

block content
 link(rel='stylesheet', href ='/stylesheets/login.css')

 main

    div(class = "wrapper")

      div(class = "login")
       p(class="login-titleUnder") Login
       form(action='login/loginRequest', method= 'POST', class ="login-form")
         label(for='email')
         input#email(type='text' name='email' placeholder='Email' required='', class ="login-input")
         br

         label(for='password')
         input#password(type='password' name='password' placeholder='Password' required='', class ="login-input")
         br

         input(type='submit' value='Login', class ="login-button")
         br
         
         p Click here to 
          a(href='signup') Sign up