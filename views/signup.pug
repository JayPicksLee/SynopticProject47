extends layout

block content
    h1 Signup
    
    div(id = "above")
     h1="SignUp to PMS"
     div(id = "content")
      form(action='/signup/createNewUser', method= 'POST')

          label(for='firstName')
          input#username(type='text' name='firstName' placeholder='First name' required='')
          br

          label(for='lastName')
          input#username(type='text' name='lastName' placeholder='Last name' required='')
          br

          label(for='password')
          input#password(type='password' name='password' placeholder='Password' required='')
          br

          label(for='email')
          input#email(type='text' name='email' placeholder='Email' required='')
          br

          label(for='phoneNumber')
          input#phoneNumber(type='text' name='phoneNumber' placeholder='Phone Number' required='')
          br
          
          input(type='submit' value='Sign Up')
          if errorMessage
            p.error= errorMessage
      p 
       a(href='/login', class = "links") Login Page    