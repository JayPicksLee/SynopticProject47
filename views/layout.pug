doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')

  nav(class="nav")
    div(class="nav_container")
      ul(class="nav_list")
        li 
          a(class = "nav_option", href='/') Home
        li 
          a(class = "nav_option", href='weather') Weather
        li 
          a(class = "nav_option", href='market') Market
        li 
          a(class = "nav_option", href='tourism') Tourism
        li 
          a(class = "nav_option", href='charities') Charities
        li 
      div(class = "nav_accounts")
          if session.isLoggedIn != true
            a(class = "nav_option", href='login', id = "signIn") Sign in 
          else if session.isAdmin == true
            a(class = "nav_option", href='admin', id = "admin")  Admin 
            form(action='logout', method='POST', id="logout_button")
              input(type="submit", name="logout", value="Signout", id="logout_input")
          else  
            a(class = "nav_option", href='user', id = "user")  User 
            form(action='logout', method='POST', id="logout_button")
              input(type="submit", name="logout", value="Signout", id="logout_input")

  body
    block content

    footer(class="footer")
      div(class="footercontainer")
       div(class="languagePicker")
        div.selectedLangauage 
            button.selectedLanguageButton English
            div.content
              a(href="/th") Thai   
              a(href="") French
      div(class="footerText")
