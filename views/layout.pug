doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')

  nav(class="nav")
    div(class="nav_container")
      ul(class="nav_list")
        li 
         if session.language == "en"
          a(class = "nav_option", href='/') Home
         if session.language == "th"
          a(class = "nav_option", href='/th') หน้าหลัก 
         if session.language == "kh"
          a(class = "nav_option", href='/kh') ផ្ទះ
        li 
         if session.language == "en"
          a(class = "nav_option", href='weather') Weather
         if session.language == "th"
          a(class = "nav_option", href='weather') สภาพอากาศ
         if session.language == "kh"
          a(class = "nav_option", href='weather') អាកាសធាតុ
        li 
         if session.language == "en"
          a(class = "nav_option", href='market') Market
         if session.language == "th"
          a(class = "nav_option", href='market') ตลาด
         if session.language == "kh"
          a(class = "nav_option", href='market') ទីផ្សារ
        li 
         if session.language == "en"
          a(class = "nav_option", href='tourism') Tourism
         if session.language == "th"
          a(class = "nav_option", href='tourism') การท่องเที่ยว
         if session.language == "kh"
          a(class = "nav_option", href='tourism') ទេសចរណ៍
        li 
         if session.language == "en"
          a(class = "nav_option", href='charities') Charities
         if session.language == "th"
          a(class = "nav_option", href='charities') การกุศล
         if session.language == "kh"
          a(class = "nav_option", href='charities') សប្បុរសធម៌
        li    
      div(class = "nav_accounts")
          if session.isLoggedIn != true
           if session.language == "en"
            a(class = "nav_option", href='login', id = "signIn") Sign in
           if session.language == "th"
            a(class = "nav_option", href='login', id = "signIn") ลงสมัคร
           if session.language == "kh"
            a(class = "nav_option", href='login', id = "signIn") ចូល

          else if session.isAdmin == true
           if session.language == "en"
            a(class = "nav_option", href='admin', id = "admin")  Admin 
           if session.language == "th"
            a(class = "nav_option", href='admin', id = "admin")  แอดมิน
           if session.language == "kh"
            a(class = "nav_option", href='admin', id = "admin")  អ្នកគ្រប់គ្រង 
            form(action='logout', method='POST', id="logout_button")
              input(type="submit", name="logout", value="Signout", id="logout_input")
          else  
           if session.language == "en"
            a(class = "nav_option", href='user', id = "user")  User 
           if session.language == "th"
            a(class = "nav_option", href='user', id = "user")  ผู้ใช้          
           if session.language == "kh"
            a(class = "nav_option", href='user', id = "user")  អ្នកប្រើ 
          form(action='logout', method='POST', id="logout_button")
              input(type="submit", name="logout", value="Signout", id="logout_input")

  body
    block content

    footer(class="footer")
      div(class="footercontainer")
       div(class="languagePicker")
        div.selectedLangauage 
         if session.language == "en"
            button.selectedLanguageButton English
            div.language-content
              a(href="/th") ไทย
              a(href="/kh") ខ្មែរ
         else if session.language == "th"
            button.selectedLanguageButton ไทย
            div.language-content
              a(href="/") English
              a(href="/kh") ខ្មែរ
         else if session.language == "kh"
            button.selectedLanguageButton ខ្មែរ
            div.language-content
              a(href="/") English
              a(href="/th") ไทย
      div(class="footerText")
