extends layout

block content   

    head 
    link(rel='stylesheet', href='/stylesheets/market.css')
    h1 Welcome to the market             

    body
        div(class="searchcontainer")
            form(action="./search/")
                input(type="search" id="searchbar" name="search" placeholder="type items name") 
                input(type="submit")  
        div(class="introcontainer")
            div(class="introtextdiv")
                p Every bit of pennies counts!
                p This market page will display items that are available in this village, all purchases will contribute to the effort of rebuilding this village
            div(class="intropicturediv")
                img(src="/images/people.jpg" id="intropic")
        div(class="item-container")
            each item in items
                div(class="item-box")                 
                    img(src="/images/firewood.jpg" class="marketimg")
                    p= item.name
                    p= item.price
                    p= item.type
                    p= item.availability 



        

