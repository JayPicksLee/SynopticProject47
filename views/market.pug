extends layout
block content   

    head 
    link(rel='stylesheet', href='/stylesheets/market.css')
    h1 Welcome to the market             

    body
        div(class="searchContainer")
            form(action="/" method="get")
                input(type="search" id="searchBar" name="search" placeholder="type items name") 
                input(type="submit" value="Search") 
        div(class="introContainer")
            div(class="introTextdiv")
                p(id="boldText") Every pennies counts!
                p(id="infoText") This market page will display items that are available in this village, all purchases will contribute to the effort of rebuilding this village. Please have a look at the local goods and consider purchasing them when you arrived at the village.
            div(class="introPicturediv")
                img(src="/images/people.jpg" id="introPic")
        div(class="item-container")
            each item in items
                div(class="item-box")                 
                    img(src="/images/mushroom.jpg" class="marketImage")
                    p= item.name
                    p= item.price
                    p= item.type
                    p= item.availability 

        

